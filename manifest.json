{
  "manifest_version": 3,
  "name": "Website Sniffer",
  "version": "1.0",
  "description": "A basic Chrome extension to sniff websites visited",
  "permissions": ["activeTab","tabs","scripting","webRequest","cookies","browsingData","history","notifications","contextMenus"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Website Sniffer",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }

}
